@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model WebAspCore.ViewModel.ViewModels.Products.MakeInViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>Thêm mới</h2>

@*<h4>MakeInViewModel</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin"
              asp-controller="MakeIns" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" >
                @*<label asp-for="Id" class="control-label" ></label>*@
                <input asp-for="Id" class="form-control" type="hidden" value="0" />
                @*<span asp-validation-for="Id" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nơi xuất xứ</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="CheckMenu" class="form-check-input" value="" />
                <label asp-for="CheckMenu" class="" form-check-label"">Hiển thị ở Menu</label>
                <span asp-validation-for="CheckMenu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Admin" asp-controller="MakeIns"asp-action="Index">Trở về</a>
</div>

